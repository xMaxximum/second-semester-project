@page "/"
@rendermode InteractiveWebAssembly

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-16 mb-16">
    <CascadingAuthenticationState>
        <AuthorizeView>
            <Authorized>
                <HomeLoggedIn/>
            </Authorized>
            <NotAuthorized>
                <MudText Typo="Typo.h3" GutterBottom="true">Welcome to Cyclone!</MudText>
                <MudAlert Severity="Severity.Info" Class="mt-4">
                    Please
                    <MudLink Href="/login">login</MudLink>
                    to access all features.
                </MudAlert>
            </NotAuthorized>
        </AuthorizeView>

    </CascadingAuthenticationState>
</MudContainer>
