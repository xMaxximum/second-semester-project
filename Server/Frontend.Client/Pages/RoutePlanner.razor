@page "/route-planner"
@using Shared.Models

<div class="route-planner-page">
    <div class="page-header">
        <h2>üó∫Ô∏è Route Planner</h2>
        <p>Plan your cycling or walking routes with turn-by-turn directions</p>
    </div>

    <div class="route-planner-layout">
        <div class="route-planner-sidebar">
            <SimpleRoutePlanner MapElementId="route-planner-map" 
                         InitialLatitude="51.505" 
                         InitialLongitude="-0.09"
                         OnRouteCalculated="HandleRouteCalculated" />
        </div>
        
        <div class="route-planner-map-container">
            <div id="route-planner-map" style="width: 100%; height: 100%; min-height: 500px;"></div>
        </div>
    </div>
</div>

@code {
    private void HandleRouteCalculated(Shared.Models.RouteData route)
    {
        // Handle route calculation completion
        // Could show notifications, save route, etc.
    }
}

<style>
    .route-planner-page {
        padding: 20px;
        height: calc(100vh - 120px);
        display: flex;
        flex-direction: column;
    }

    .page-header {
        margin-bottom: 20px;
    }

    .page-header h2 {
        margin: 0;
        color: #333;
        font-size: 1.8rem;
    }

    .page-header p {
        margin: 5px 0 0 0;
        color: #666;
        font-size: 1rem;
    }

    .route-planner-layout {
        display: grid;
        grid-template-columns: 400px 1fr;
        gap: 20px;
        height: 100%;
        min-height: 0;
    }

    .route-planner-sidebar {
        overflow-y: auto;
        max-height: 100%;
    }

    .route-planner-map-container {
        background: #f0f0f0;
        border-radius: 8px;
        overflow: hidden;
        position: relative;
    }

    @@media (max-width: 1200px) {
        .route-planner-layout {
            grid-template-columns: 350px 1fr;
        }
    }

    @@media (max-width: 900px) {
        .route-planner-layout {
            grid-template-columns: 1fr;
            grid-template-rows: auto 1fr;
            gap: 15px;
        }
        
        .route-planner-sidebar {
            max-height: 300px;
        }
        
        .route-planner-map-container {
            min-height: 400px;
        }
    }

    @@media (max-width: 600px) {
        .route-planner-page {
            padding: 10px;
            height: calc(100vh - 80px);
        }
        
        .route-planner-layout {
            gap: 10px;
        }
        
        .page-header h2 {
            font-size: 1.5rem;
        }
    }
</style>
