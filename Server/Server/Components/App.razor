    <script>
        window.blazorSetCookie = function (value) {
            document.cookie = value;
        };

        window.blazorGetCookie = function (name) {
            let matches = document.cookie.match(new RegExp(
                "(?:^|; )" + name.replace(/([.$?*|{}()[\]\\/+^])/g, '\\$1') + "=([^;]*)"
            ));
            return matches ? decodeURIComponent(matches[1]) : "";
        };
    </script>

